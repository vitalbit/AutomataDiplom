@model MvcAutomation.Models.ChangePasswordModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
@using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
{
    @Html.PasswordFor(model => model.OldPassword, new { placeholder = "Old password" })
    <br />
    @Html.PasswordFor(model => model.NewPassword, new { placeholder = "New password" })
    <br />
    @Html.PasswordFor(model => model.RepeatPassword, new { placeholder = "Repeat password" })
    <br />
    <input type="submit" value="OK" />
}