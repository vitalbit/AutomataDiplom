@model MvcAutomation.Models.LoginModel

@{
    ViewBag.Title = "Login Page";
}
<center>
    <div id="logRegArea">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div id="stageOneLog">
            <input id="emailText" type="text" placeholder="Email" />
            <span id="errorMsg" hidden></span>
            <br />
            <input id="stageOneSubmit" type="submit" value="OK" />
        </div>
        <div id="loginFields" hidden>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" })
                <br />
                @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
                <br />
                <input type="submit" value="OK" />
            }
        </div>
        <div id="signupFields" hidden>
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" })
                <br />
                @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
                <br />
                @Html.PasswordFor(model => model.RepeatPassword, new { placeholder = "Repeat password" })
                <br />
                <input type="submit" value="OK" />
            }
        </div>
    </div>
</center>

@Scripts.Render("~/bundles/loginScripts")